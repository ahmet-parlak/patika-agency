<section class="page-section bg-light" id="portfolio">
  <div class="container">
    <div class="text-center">
      <h2 class="section-heading text-uppercase">Portfolio</h2>
      <% 
      let subheadingText = "Your projects will be listed in this section..";
      if (projects.length > 0) {
        subheadingText = "Your Projects";
      } 
      %>
      <h3 class="section-subheading text-muted"><%= subheadingText %></h3>
    </div>
    <%- include('../components/add_project') %>
    <div class="row">
      <% projects.forEach(project => {%>
      <%- include('../components/edit_project', project) %>
      <%}); %>
    </div>
  </div>
</section>